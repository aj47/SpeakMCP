<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <!-- Required for Electron/Node.js JIT compilation -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <!-- Required for Electron/Node.js native modules -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <!-- Required for Electron to load native modules with hardened runtime -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    <!-- Allow DYLD environment variables - may be needed by some native modules -->
    <!-- Note: This is a permissive entitlement that weakens hardened runtime. Consider removing if not needed. -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    <!-- Required for microphone access (voice recording) -->
    <key>com.apple.security.device.microphone</key>
    <true/>
    <!-- Required for audio input (voice recording) -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    <!-- Required for system integration (AppleScript, etc.) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
  </dict>
</plist>

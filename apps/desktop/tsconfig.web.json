{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/shared/**/*",
    "src/main/*.ts",
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",

    // Prevent TS from picking up the monorepo root's @types packages (e.g. @types/react@19
    // used by apps/mobile) which causes JSX type incompatibilities for the desktop app.
    "typeRoots": ["./node_modules/@types"],

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "~/*": [
        "src/renderer/src/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],

      // Force React typings to come from the desktop app's local @types/react (React 18).
      // Without this, TypeScript can resolve workspace deps via pnpm's realpath under the
      // monorepo root and accidentally pull in @types/react@19 from there.
      "react": [
        "./node_modules/@types/react/index.d.ts"
      ],
      "react/jsx-runtime": [
        "./node_modules/@types/react/jsx-runtime.d.ts"
      ],
      "react/jsx-dev-runtime": [
        "./node_modules/@types/react/jsx-dev-runtime.d.ts"
      ]
    }
  }
}

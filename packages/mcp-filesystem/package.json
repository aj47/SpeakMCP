{
  "name": "@speakmcp/mcp-filesystem",
  "version": "1.0.0",
  "description": "Simplified filesystem MCP server for SpeakMCP - provides essential file operations via Model Context Protocol",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "speakmcp-filesystem": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "minimatch": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "mcp",
    "filesystem",
    "speakmcp",
    "ai",
    "assistant",
    "file-operations"
  ],
  "private": true
}


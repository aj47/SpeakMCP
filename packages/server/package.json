{
  "name": "@speakmcp/server",
  "version": "1.2.0",
  "type": "module",
  "description": "Standalone SpeakMCP server - AI agent with MCP tool integration",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "speakmcp-server": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js",
      "require": "./dist/config/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.1",
    "@ai-sdk/google": "^3.0.1",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@fastify/cors": "^11.1.0",
    "ai": "^6.0.3",
    "fastify": "^5.6.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "tsup": "^8.0.0",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  },
  "optionalDependencies": {
    "langfuse": "^3.38.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ]
}


{
  "name": "@speakmcp/shared",
  "version": "1.0.0",
  "description": "Shared design tokens and utilities for SpeakMCP apps",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./colors": {
      "types": "./dist/colors.d.ts",
      "import": "./dist/colors.mjs",
      "require": "./dist/colors.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "private": true
}

